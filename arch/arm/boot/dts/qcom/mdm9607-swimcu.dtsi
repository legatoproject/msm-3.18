&i2c_4 {
	swimcu@3a{
		compatible = "swimcu,mkl03";
		reg = <0x3a>;
		swimcu,nr-gpio = <8>;
		swimcu,nr-adc = <2>;
		swimcu,adc-base = <2>;

		swimcu,func-fwupd-en = /bits/ 8 <1>;
		swimcu,func-pm-en = /bits/ 8 <1>;
		swimcu,func-event-en = /bits/ 8 <1>;
	};
};
